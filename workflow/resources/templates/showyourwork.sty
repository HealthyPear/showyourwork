}

% Hack `showkeys' to show margin links for figures
% See https://tex.stackexchange.com/a/580553
\renewcommand\showkeyslabelformat[1]{%
  \IfBeginWith*{#1}{fig:}{\StrBehind*{#1}{fig:}[\syw@CurrentLabelName]%
    \StrBefore*{\syw@CurrentLabelName:}{:}[\syw@CurrentLabelName]% remove label :suffix
    \normalfont%
    \stackon[3pt]{%
      \IfEq*{\usevalue{\syw@CurrentLabelName_status}}{KEYNOTFOUND}{}{%
      \raisebox{0pt}[5pt][5pt]{%
        \href{((- repo.url -))/blob/((- repo.sha -))/\usevalue{\syw@CurrentLabelName_script}}{%
        \color{\usevalue{\syw@CurrentLabelName_status}}\faGithub%
      }%
      }%
      }%
    }{%
      \stackon[3pt]{%
        \IfEq*{\usevalue{\syw@CurrentLabelName_datasetOne}}{KEYNOTFOUND}{}{%
          \IfEq*{\usevalue{\syw@CurrentLabelName_datasetOne}}{UNAUTHORIZED}{%
            \raisebox{0pt}[5pt][5pt]{%
              \color{sywRed}\faDatabase%
            }%
          }{%
            \raisebox{0pt}[5pt][5pt]{%
              \href{\usevalue{\syw@CurrentLabelName_datasetOne}}{%
                \color{sywBlue}\faDatabase%
              }%
            }%
          }%
        }%
      }{%
        \stackon[3pt]{%
          \IfEq*{\usevalue{\syw@CurrentLabelName_datasetTwo}}{KEYNOTFOUND}{}{%
            \IfEq*{\usevalue{\syw@CurrentLabelName_datasetTwo}}{UNAUTHORIZED}{%
              \raisebox{0pt}[5pt][5pt]{%
                \color{sywRed}\faDatabase%
              }%
            }{%
              \raisebox{0pt}[5pt][5pt]{%
                \href{\usevalue{\syw@CurrentLabelName_datasetTwo}}{%
                  \color{sywBlue}\faDatabase%
                }%
              }%
            }%
          }%
        }{%
          \IfEq*{\usevalue{\syw@CurrentLabelName_datasetThree}}{KEYNOTFOUND}{}{%
            \IfEq*{\usevalue{\syw@CurrentLabelName_datasetThree}}{UNAUTHORIZED}{%
              \raisebox{0pt}[5pt][5pt]{%
                \color{sywRed}\faDatabase%
              }%
            }{%
              \raisebox{0pt}[5pt][5pt]{%
                \href{\usevalue{\syw@CurrentLabelName_datasetThree}}{%
                  \color{sywBlue}\faDatabase%
                }%
              }%
            }%
          }%
        }%
      }%
    }%
  }{}%
}

